<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/main_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/low_cloud">
    </ImageView>

    <LinearLayout
        android:clickable="false"
        android:orientation="vertical"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation_layer.main_activity.activity.MainActivity">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">
            </View>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.5">

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="10.5">
                </View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="86">


                    <FrameLayout
                        android:id="@+id/input_city_frame"
                        android:descendantFocusability="blocksDescendants"
                        android:background="@drawable/back_city_input"
                        android:layout_weight="74"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:textSize="@dimen/big_standard_text_size_21"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:inputType="text"
                            android:id="@+id/input_city"
                            android:fontFamily="verdana"
                            android:paddingEnd="@dimen/big_offset"
                            android:paddingStart="@dimen/big_offset"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </androidx.appcompat.widget.AppCompatEditText>

                        <ImageView
                            android:id="@+id/btn_apply_city"
                            android:paddingEnd="@dimen/standard_offset"
                            android:layout_gravity="end|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/apply_city">
                        </ImageView>

                    </FrameLayout>

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </View>

                    <RelativeLayout
                        android:layout_weight="13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_change_city"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_geo"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ImageView>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3.5">
                </View>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="17sp"
                    android:drawablePadding="@dimen/small_offset"
                    android:layout_centerInParent="true"
                    android:id="@+id/tvDescriptionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.AppCompatTextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="37">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13.25">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                </View>

                <LinearLayout
                    android:layout_weight="40"
                    android:orientation="vertical"
                    android:background="@drawable/back_icons_cloudy"
                    android:id="@+id/tempIcon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8">
                    </View>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_weight="20"
                        android:layout_marginHorizontal="@dimen/up_small_offset"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="@dimen/small_text_size"
                        app:autoSizeMaxTextSize="@dimen/big_standard_text_size_21"
                        android:id="@+id/text_temp"
                        android:textSize="@dimen/standard_text_size_15"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </androidx.appcompat.widget.AppCompatTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="49.5">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTemp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="verdana"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/standard_offset"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="@dimen/large_text_size"
                            app:autoSizeMinTextSize="@dimen/small_text_size"
                            app:autoSizeTextType="uniform">
                        </androidx.appcompat.widget.AppCompatTextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="12.5">
                    </View>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                </View>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12.5">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5">
                </View>

                <LinearLayout
                    android:id="@+id/windIcon"
                    android:orientation="vertical"
                    android:background="@drawable/back_icons_cloudy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="26.5">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8">
                    </View>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_weight="20"
                        android:layout_marginHorizontal="@dimen/up_small_offset"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="@dimen/small_text_size"
                        app:autoSizeMaxTextSize="@dimen/big_standard_text_size_21"
                        android:id="@+id/text_wind"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </androidx.appcompat.widget.AppCompatTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="49.5">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:paddingHorizontal="@dimen/up_small_offset"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/small_text_size"
                            app:autoSizeMaxTextSize="@dimen/large_text_size"
                            android:id="@+id/tvWind"
                            android:textStyle="bold"
                            android:fontFamily="verdana"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.appcompat.widget.AppCompatTextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="12.5">
                    </View>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5">
                </View>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5">
                </View>

                <LinearLayout
                    android:id="@+id/humidityIcon"
                    android:orientation="vertical"
                    android:background="@drawable/back_icons_cloudy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="26.5">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginHorizontal="@dimen/up_small_offset"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/small_text_size"
                            app:autoSizeMaxTextSize="@dimen/big_standard_text_size_21"
                            android:id="@+id/text_humidity"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.appcompat.widget.AppCompatTextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="49.5">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:paddingHorizontal="@dimen/up_small_offset"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/small_text_size"
                            app:autoSizeMaxTextSize="@dimen/large_text_size"
                            android:id="@+id/tvHumidity"
                            android:textStyle="bold"
                            android:fontFamily="verdana"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.appcompat.widget.AppCompatTextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="12.5">
                    </View>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5">
                </View>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
            </View>

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/bad_connection"
                android:background="#A96A6A6A"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.rahatarmanahmed.cpv.CircularProgressView
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/up_small_offset"
                    android:id="@+id/cpvWaiting"
                    app:cpv_color="@color/colorPrimaryDark"
                    app:cpv_indeterminate="true"
                    app:cpv_animAutostart="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </com.github.rahatarmanahmed.cpv.CircularProgressView>

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/text_bad_connection"
                    android:layout_marginTop="@dimen/standard_offset"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cpvWaiting"
                    android:gravity="center"
                    android:textSize="@dimen/standard_text_size_17">
                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="19.5">
                </View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12">

                    <View
                        android:layout_weight="22"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </View>

                    <LinearLayout
                        android:layout_weight="44"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="gone"
                            android:id="@+id/rvHelp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <View
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </View>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="69">
                </View>

            </LinearLayout>

            <ImageView
                android:layout_margin="@dimen/smallest_offset"
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings">
            </ImageView>

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:layout_margin="@dimen/up_small_offset"
                android:layout_gravity="end"
                app:cpv_color="#382683"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true"
                android:id="@+id/cpv_loading"
                android:layout_width="38dp"
                android:layout_height="38dp">
            </com.github.rahatarmanahmed.cpv.CircularProgressView>

        </FrameLayout>