<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25">

        <LinearLayout
            android:layout_marginStart="@dimen/standard_offset"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:id="@+id/fTemp2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Температура:"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:id="@+id/fFeels2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Ощущается как:"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:id="@+id/fHumidity2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Влажность:"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:id="@+id/fWind2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Ветер:"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:id="@+id/fWindDir2"
                android:layout_marginEnd="6dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Направление ветра:"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:id="@+id/fPressure2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Давление:"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16">
            </androidx.appcompat.widget.AppCompatTextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/temp2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/feels2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/humidity2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/wind2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:layout_marginEnd="@dimen/small_offset"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/windDir2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/small_text_size"
                app:autoSizeMaxTextSize="@dimen/standard_text_size_13"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/pressure2"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

</LinearLayout>